{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "typedocOptions": {
    "inputFiles": [
      "./src"
    ],
    "exclude": [
      "./src/__test__"
    ],
    "mode": "modules",
    "out": "docs",
    "includeDeclarations": true,
    "excludeExternals": true,
    "excludePrivate": true,
    "excludeNotExported": true,
  }
}
